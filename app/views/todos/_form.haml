.container
  = form_for @todo do |f|
    - if @todo.errors.any?
      #error_explanation
        .alert.alert-danger.sm
          %p= "#{pluralize(@todo.errors.count, 'error')} prohibited this Todo from being saved:"
          %ul.alert.alert-danger
            - @todo.errors.full_messages.each do |msg|
              %li= msg
  
    .form-group
      %label Name
      = f.text_field :name, class: 'form-control'
    .form-group
      %label Description
      = f.text_area :description, class: 'form-control'      
    %p
      %label Due Date 
      %br
      = f.date_field :due_date
    %p
      %label Priority
      %br
      = select_tag 'todo[priority]', options_for_select([['------', ''], ['High', 1], ['Medium', 2], ['Low', 3]], @todo.priority), class: 'form-control'
    %p
      = f.submit 'Save', class: 'btn btn-primary'